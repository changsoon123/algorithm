package chap01;

import java.util.Scanner;

public class test {

	public static void main(String[] args) {

		Scanner stdIn = new Scanner(System.in);

		int a;
		        
        do {
        	System.out.println("양수를 입력하세요 : ");
        	a = stdIn.nextInt();
        	
        } while(a <= 0 );
        
        int b = 0;
        while (a > 0) {
        	a = a / 10;
        	b++;
        }
        
        System.out.println("그 수는 " + b + "자리수 입니다.");
		
		
	}

}
