package chap01;

import java.util.Scanner;

public class test {

	static void triangleLB(int a){
			
		for(int i = 1; i <= a; i++) {
				System.out.println("*".repeat(i));
			}
	}
	
	static void triangleLU(int a){
			
		for(int i = 1; i <= a; i++) {
			for(int j = a; j >= i; j--)
				System.out.println("*".repeat(j));
			}
	}
	
	static void triangleRU(int a){
		
		
		for(int i = 1; i <= a; i++) {
				System.out.println("*".repeat(i));
			}
	}
	
	static void triangleRB(int a){
		
		
		for(int i = 1; i <= a; i++) {
				System.out.println("*".repeat(i));
			}
	}
	
	public static void main(String[] args) {

		Scanner stdIn = new Scanner(System.in);
		System.out.println("왼쪽 아래가 직각인 이등변삼각형을 출력.");
		
		int a;
		
		do {
		System.out.printf("삼각형 변의 길이: ");
		a = stdIn.nextInt();
		} while(a <= 0);
		
		triangleLB(a);
		triangleLU(a);
		triangleRU(a);
		triangleRB(a);
		
	}

}
